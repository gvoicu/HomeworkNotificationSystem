<div class = "row">
<div class = "span8 offset2">

<div class="hero-unit">
  <%= form_tag ({:controller => "projects", :action => "create"}), ({:method => "POST"}) do %>
        <h2>Insert new homework task</h2>
				<br>
				<br>
				<table>
				<tr>
				<td >
				<span class="label label-important" >Name</span> 
				</td>			
				<td style = "padding-left: 30px;">				
				<input type="text" name="name" style="height: 30px; padding-left: 30px;" />
				</td>				
				</tr>	
	
				<tr>
				<td>
				<span class="label label-important">Type</span> 
				</td>				
				<td style = "padding-left: 30px;">
				<input type="text" name="type" style="height: 30px; padding-left: 30px;"/>
				</td>		
				</tr>				
				<tr>
				<td>		
				<span class="label label-important">School fact</span> 
				</td>
				<td style = "padding-left: 30px;">				
				<select name="subject_id" >
        <% Subject.all.each do |subject| %>
        <option value =" <%= subject.id %>"> <%= subject.name %> </option>
        <% end %>
        
				</select>
				</td>				
				</tr>
				<tr>
				<td>
				<span class="label label-important">When</span> 
				</td>
				<td style = "padding-left: 30px;">
				<input type="text" name="when" style="height: 30px; padding-left: 30px;"/>
				</td>	
				</tr>				
				<tr>
				<td>
				<span class="label label-important">Where</span> 
				</td>
				<td style = "padding-left: 30px;">
				<input type="text" name="where" style="height: 30px; padding-left: 30px;"/>			
				</td>
				</tr>				
				<tr>
				<td>
				<span class="label label-important">Priority</span>       
				</td>
				<td style = "padding-left: 30px;">
				  <select name="priority">
				    <option value="1"> Low </option>
				    <option value="2">  Medium </option>
	          <option value="3"> High </option>
            <option value="4"> Your life depends on it  </option>
				  </select>
				</td>
				</tr>				
					<tr>		
						<td>
							<span class="label label-important">Other details</span>       
						</td>
						<td style = "padding-left: 30px;">				
							<textarea  rows="40"  name="other_details" style="height: 30px; padding-left: 30px;"></textarea>				
						</td>	
					</tr>		
				</table>
        <input style="float:right;" class="badge badge-inverse" type="submit" value="Add it!" />
  <% end %>
</div>
</div> 

